@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var ambienteTest = Configuration.GetValue<int>("AmbienteTest");
    ViewData["Title"] = "Historial de Precios";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.6.2/css/colReorder.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Mismos estilos que Productos -->
    <link href="~/css/productos.css" rel="stylesheet" />
    <link href="~/css/redisenopantallas.css" rel="stylesheet" />

    <!-- Select2 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
}

<partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

<div class="container page-99" style="margin-top:100px">

    <!-- Header estilo Productos -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-line-chart"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Historial de Precios</h2>
                    <small class="text-muted-cc">Evolución por producto / proveedor</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Registros</div>
                    <div class="value" id="kpiCantRegistros">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card principal -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Controles superiores (idéntico patrón que Productos) -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center mb-2">
                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltros">
                            <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                        </button>

                        <div class="dropdown cc-dd">
                            <button id="dropdownColumnas"
                                    type="button"
                                    class="btn btn-secondary dropdown-toggle d-flex align-items-center"
                                    data-bs-toggle="dropdown"
                                    data-bs-display="static"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu cc-dropdown-menu" id="configColumnasMenu"></ul>
                        </div>
                    </div>

                    <!-- Barra de filtros PLEGABLE (mismos IDs tuyos) -->
                    <form id="formFiltrosHistorial" class="filter-bar shadow-sm rounded-3 mb-3 p-3 d-none">
                        <div class="row g-2 align-items-end">
                            <div class="col-6 col-md-2">
                                <label class="form-label">Desde</label>
                                <input type="date" id="txtFechaDesde" class="form-control">
                            </div>
                            <div class="col-6 col-md-2">
                                <label class="form-label">Hasta</label>
                                <input type="date" id="txtFechaHasta" class="form-control">
                            </div>
                            <div class="col-12 col-md-2">
                                <label class="form-label">Proveedor</label>
                                <select id="Proveedoresfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>Proveedor</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-3">
                                <label class="form-label">Producto</label>
                                <select id="Productosfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>Producto</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-3 d-flex gap-2 mt-2">
                                <a class="btn btn-primary flex-fill" id="aplicarFiltros" onclick="aplicarFiltros()">
                                    <i class="fa fa-search me-1"></i> Aplicar
                                </a>
                                <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltros()">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Tabla -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap" id="grd_Historial" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Fecha</th>
                                    <th>Precio Costo</th>
                                    <th>Precio Venta</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Resumen -->
                    <label id="labelIncrementoDecremento" class="mt-2"></label>

                </div>
            </div>
        </div>
    </div>

</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery (si tu layout no lo incluye) -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables + extensiones -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdn.datatables.net/colreorder/1.6.2/js/dataTables.colReorder.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <!-- Moment -->
    <script src="~/js/utils/moment.js"></script>

    <!-- Lógica -->
    <script src="~/js/HistorialPrecios.js?v=1.0"></script>
}
