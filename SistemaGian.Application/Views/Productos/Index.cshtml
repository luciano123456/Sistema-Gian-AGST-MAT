<partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

<div class="container page-99" style="margin-top:100px">
    <!-- Header KPI estilo “glass” -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-cubes"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Productos</h2>
                    <small class="text-muted-cc">Listado y acciones</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap">
                <!-- KPI: cantidad de productos filtrados -->
                <div class="cc-stat">
                    <div class="label">Productos</div>
                    <div class="value" id="kpiCantProductos">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla + Filtros -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">
                    <!-- Controles superiores (como Pedidos) -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center mb-2">
                        <a class="btn btn-success d-flex align-items-center px-3 py-2 btnnuevo" id="btnNuevo" onclick="nuevoProducto()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo
                        </a>

                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltros">
                            <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                        </button>

                        <div class="dropdown cc-dd">
                            <button id="dropdownColumnas"
                                    type="button"
                                    class="btn btn-secondary dropdown-toggle d-flex align-items-center"
                                    data-bs-toggle="dropdown"
                                    data-bs-display="static"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu cc-dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                        </div>
                    </div>

                    <!-- Barra de filtros plegable (mismos IDs que ya usás) -->
                    <form id="formFiltrosProductos" class="filter-bar shadow-sm rounded-3 mb-3 p-3 d-none">
                        <div class="row g-2 align-items-end">
                            <div class="col-12 col-md-3">
                                <label class="form-label">Proveedor</label>
                                <select id="Proveedoresfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>Proveedor</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-3">
                                <label class="form-label">Cliente</label>
                                <select id="clientesfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>Cliente</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-3">
                                <label class="form-label">Producto</label>
                                <select id="Productosfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>Producto</option>
                                </select>
                            </div>

                            <div class="col-3 d-flex gap-2 mt-2">
                                <a class="btn btn-primary flex-fill" id="aplicarFiltros" onclick="aplicarFiltros()">
                                    <i class="fa fa-search me-1"></i> Aplicar
                                </a>
                                <button type="button" class="btn btn-outline-secondary" onclick="resetFiltrosProductos()">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Tabla -->
                    <div class="dt-dark-wrap">
                        <div class="selectall-bar d-flex align-items-center gap-2 mb-2">
                            <label class="form-check-label d-flex align-items-center gap-2 m-0" for="selectAllCheckbox">
                                <span class="sa-toggle">
                                    <input class="form-check-input sa-input" type="checkbox" id="selectAllCheckbox" aria-label="Seleccionar todos">
                                    <span class="sa-slider"></span>
                                </span>
                                <span class="sa-text">Seleccionar todos</span>
                            </label>
                        </div>
                        <!-- … la tabla … -->
                    </div>

                    <table class="dt-dark display nowrap" id="grd_Productos" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Descripcion</th>
                                <th class="th-proveedor">Proveedor</th>
                                <th>Marca</th>
                                <th>Categoria</th>
                                <th>Unidad de Medida</th>
                                <th>P. Costo</th>
                                <th>P. Venta</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                                <th>Porc. Ganancia</th>
                                <th>Activo</th>
                                <th>IdMoneda</th>
                                <th>IdMarca</th>
                                <th>IdCategoria</th>
                                <th>IdUnidadMedida</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                    </div>
                <!-- FAB BAR horizontal (flotante) -->
                <div class="fab-bar">
                    <a id="btnDuplicar" class="btn btn-fab btn-fab-danger"
                       onclick="duplicarProductos()" hidden>
                        <i class="fa fa-clone"></i>
                        <span>Duplicar</span>
                    </a>

                    <a id="btnAumentarPrecios" class="btn btn-fab btn-fab-success"
                       onclick="abrirmodalAumentarPrecios()" hidden>
                        <i class="fa fa-arrow-up"></i>
                        <span>Aumentar precios</span>
                    </a>

                    <a id="btnBajarPrecios" class="btn btn-fab btn-fab-gray"
                       onclick="abrirmodalBajarPrecios()" hidden>
                        <i class="fa fa-arrow-down"></i>
                        <span>Bajar precios</span>
                    </a>

                    <a id="btnAsignarProveedor" class="btn btn-fab btn-fab-green"
                       onclick="abrirmodalProveedor()" hidden>
                        <i class="fa fa-truck"></i>
                        <span>Asignar proveedor</span>
                    </a>

                    <a id="btnAsignarCliente" class="btn btn-fab btn-fab-green"
                       onclick="abrirmodalCliente()" hidden>
                        <i class="fa fa-user"></i>
                        <span>Asignar cliente</span>
                    </a>
                </div>

            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- MODALES (sin cambios de IDs ni estructura) -->
<div class="modal fade" id="modalProveedores" tabindex="-1" aria-labelledby="modalProveedoresLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalProveedoresLabel">Asignar Proveedores</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formAsignarProveedor" class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Seleccione proveedores</label>
                        <input type="text" id="buscadorProveedores" class="form-control mb-2" placeholder="Buscar proveedor...">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="checkTodosProveedores">
                            <label class="form-check-label fw-bold" for="checkTodosProveedores">Seleccionar todos</label>
                        </div>
                        <div id="contenedorProveedores" class="form-check-list border rounded p-2" style="max-height: 300px; overflow-y: auto;"></div>
                    </div>
                    <p id="datos" class="text-center text-danger datos-error d-none mb-0"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button id="btnRegistrarModificar" type="button" class="btn btn-primary" onclick="asignarProveedores()">Asignar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalClientes" tabindex="-1" role="dialog" aria-labelledby="modalClientesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalClientesLabel">Asignar Clientes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formAsignarCliente" class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Seleccione clientes</label>
                        <input type="text" id="buscadorClientes" class="form-control mb-2" placeholder="Buscar cliente...">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="checkTodosClientes">
                            <label class="form-check-label fw-bold" for="checkTodosClientes">Seleccionar todos</label>
                        </div>
                        <div id="contenedorClientes" class="form-check-list border rounded p-2" style="max-height: 300px; overflow-y: auto;"></div>
                    </div>
                    <p id="datosCliente" class="mb-3 text-center text-danger datos-error d-none"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="asignarClientes()">Asignar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalBajar" tabindex="-1" role="dialog" aria-labelledby="modalBajarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalBajarLabel">Bajar Precios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formBajar" class="row g-3">
                    <div class="col-md-6">
                        <label for="txtBajaPrecioCosto" class="form-label">Porc. Precio Costo (*)</label>
                        <input type="text" class="form-control" id="txtBajaPrecioCosto" required>
                    </div>
                    <div class="col-md-6">
                        <label for="txtBajaPrecioVenta" class="form-label">Porc. Precio Venta (*)</label>
                        <input type="text" class="form-control" id="txtBajaPrecioVenta" required>
                    </div>
                    <div class="col-md-12">
                        <p id="datosBajar" class="text-center text-danger datos-error d-none mb-0"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="bajarPrecios()">Bajar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAumentar" tabindex="-1" role="dialog" aria-labelledby="modalAumentarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalAumentarLabel">Aumentar Precios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formAumentar" class="row g-3">
                    <div class="col-md-6">
                        <label for="txtAumentoPrecioCosto" class="form-label">Porc. Precio Costo (*)</label>
                        <input type="text" class="form-control" id="txtAumentoPrecioCosto" value="0" required>
                    </div>
                    <div class="col-md-6">
                        <label for="txtAumentoPrecioVenta" class="form-label">Porc. Precio Venta (*)</label>
                        <input type="text" class="form-control" id="txtAumentoPrecioVenta" value="0" required>
                    </div>
                    <p id="datosAumentar" class="mb-3 text-center text-danger datos-error d-none"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="aumentarPrecios()">Aumentar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formEdicionProducto" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>
                    <input type="text" id="txtActivo" hidden readonly>

                    <div class="col-md-3">
                        <label id="lblDescripcion" for="txtDescripcion" class="form-label">Descripcion (*)</label>
                        <input type="text" class="form-control" id="txtDescripcion" required>
                    </div>

                    <div class="col-md-3">
                        <label for="txtMarcas" class="form-label">Marca (*)</label>
                        <select id="Marcas" name="select" class="form-control">
                            <option value="" selected>Marca</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="txtCategoria" class="form-label">Categoria (*)</label>
                        <select id="Categorias" name="select" class="form-control">
                            <option value="" selected>Categoria</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="txtUnidadDeMedida" class="form-label">Unidad de Medida (*)</label>
                        <select id="UnidadesDeMedidas" name="select" class="form-control">
                            <option value="" selected>Unidad de Medida</option>
                        </select>
                    </div>

                    <div class="col-md-3" id="divPeso" hidden>
                        <label id="lblPesoCantidad" for="txtProductoPeso" class="form-label">Peso</label>
                        <input type="number" class="form-control" id="txtProductoPeso" required>
                    </div>

                    <div class="col-md-3" id="divProductoCantidad" hidden>
                        <label id="lblProductoCantidad" for="txtProductoCantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="txtProductoCantidad" required>
                    </div>

                    <div class="col-md-3">
                        <label for="txtMoneda" class="form-label">Moneda (*)</label>
                        <select id="Monedas" name="select" class="form-control">
                            <option value="" selected>Moneda</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label id="lblPrecioCosto" for="txtPrecioCosto" class="form-label">Precio Costo U. (*)</label>
                        <input type="number" class="form-control" id="txtPrecioCosto" required step="0.01">
                    </div>

                    <div class="col-md-3">
                        <label id="lblPorcentajeGanancia" for="txtPorcentajeGanancia" class="form-label">Porc. Ganancia (*)</label>
                        <input type="number" class="form-control" id="txtPorcentajeGanancia" required step="0.01">
                    </div>

                    <div class="col-md-3">
                        <label id="lblPrecioVenta" for="txtPrecioVenta" class="form-label">Precio Venta U.</label>
                        <input type="number" class="form-control" id="txtPrecioVenta" step="0.01">
                    </div>

                    <div class="col-md-3" hidden>
                        <label id="lblTotal" for="txtTotal" class="form-label">Total</label>
                        <input type="number" class="form-control" id="txtTotal" step="0.01" value="0" readonly>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-primary" onclick="guardarCambios()">Registrar</button>
            </div>
        </div>
    </div>
</div>

