                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Dni</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-success" id="btnSeleccionarClienteModal"><i class="fa fa-check"> Seleccionar</i></button>
