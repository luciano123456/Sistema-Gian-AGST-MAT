<partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

<div class="container page-99" style="margin-top:100px">
  
    <!-- Header KPI estilo “glass” -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-users"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Clientes</h2>
                    <small class="text-muted-cc">Gestión y listado de clientes</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-4 flex-wrap align-items-center" id="sumaTotales">
                <div class="cc-stat">
                    <div class="label">Total deuda cliente</div>
                    <div class="value"><strong id="sumaCliente">$0,00</strong></div>
                </div>
                <div class="cc-stat">
                    <div class="label">Total deuda proveedor</div>
                    <div class="value"><strong id="sumaProveedor">$0,00</strong></div>
                </div>

               <div class="dropdown cc-dd">
  <button
    id="dropdownColumnas"
    type="button"
    class="btn btn-secondary dropdown-toggle d-flex align-items-center"
    data-bs-toggle="dropdown"
    data-bs-display="static"
    data-bs-auto-close="outside"
    aria-expanded="false">
    <i class="fa fa-cog me-2"></i>
    Config. Columnas
  </button>

  <ul class="dropdown-menu cc-dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
</div>

                <a class="btn btn-success d-flex align-items-center px-3 py-2 btnnuevo" onclick="nuevoCliente()">
                    <i class="fa fa-plus-square me-2"></i> Nuevo
                </a>
            </div>
        </div>
    </div>

    <!-- Tarjeta / Tabla estilo “glass” -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_clientes" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Telefono</th>
                                    <th>Direccion</th>
                                    <th>Provincia</th>
                                    <th>Localidad</th>
                                    <th>DNI</th>
                                    <th>Saldo a Favor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- contenido DataTable -->
                            </tbody>
                        </table>
                    </div>
                </div><!-- /tabla-wrap -->
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- MODALES (mismos IDs y names) -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Cliente</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarCliente" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>

                    <div class="col-md-6">
                        <label for="txtNombre" class="form-label">Nombre (*)</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                    </div>

                    <div class="col-md-6">
                        <label for="txtTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefono">
                    </div>

                    <div class="col-md-6">
                        <label for="txtDireccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="txtDireccion">
                    </div>

                    <div class="col-md-6">
                        <label for="Provincias" class="form-label">Provincia</label>
                        <select id="Provincias" name="select" class="form-control">
                            <option value="" selected>Provincias</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="txtLocalidad" class="form-label">Localidad</label>
                        <input type="text" class="form-control" id="txtLocalidad">
                    </div>

                    <div class="col-md-6">
                        <label for="txtDni" class="form-label">DNI</label>
                        <input type="text" class="form-control" id="txtDni">
                    </div>
                </form>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-success" onclick="guardarCambios()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL ÚNICO: Saldos (Historial + Nuevo + Edición) -->
<!-- MODAL ÚNICO: Saldos (Historial + Nuevo + Editar) — versión linda -->
<div class="modal fade" id="modalSaldos" tabindex="-1" aria-labelledby="modalSaldosLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content cc-modal cc-elev-3">
            <!-- Header -->
            <div class="modal-header cc-header-gradient">
                <div class="d-flex align-items-center gap-3">
                    <span class="cc-badge-ghost">
                        <i class="fa fa-credit-card"></i>
                    </span>
                    <div>
                        <h4 class="modal-title fw-800 m-0" id="modalSaldosLabel">Saldos de <span id="lblClienteSaldos"></span></h4>
                        <small class="text-muted-cc">Ver historial, crear, editar y eliminar movimientos</small>
                    </div>
                </div>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Tabs -->
            <div class="px-3 pt-3">
                <ul class="nav nav-pills cc-pills" id="tabsSaldos" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="tab-historial-tab" data-bs-toggle="tab" data-bs-target="#tab-historial" type="button" role="tab">
                            <i class="fa fa-list-ul me-1"></i> Historial
                            <span class="badge bg-secondary-subtle text-white ms-2" id="badgeCountHistorial" style="display:none;"></span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="tab-nuevo-tab" data-bs-toggle="tab" data-bs-target="#tab-nuevo" type="button" role="tab">
                            <i class="fa fa-plus-circle me-1"></i> Nuevo movimiento
                        </button>
                    </li>
                    <li class="nav-item d-none" role="presentation">
                        <button class="nav-link" id="tab-editar-tab" data-bs-toggle="tab" data-bs-target="#tab-editar" type="button" role="tab">
                            <i class="fa fa-pencil me-1"></i> Editar
                        </button>
                    </li>
                    <li class="ms-auto d-none d-md-flex align-items-center">
                        <div class="cc-chip-total">
                            <i class="fa fa-balance-scale"></i>
                            <span class="label">Saldo actual</span>
                            <strong id="saldoHeaderValue">—</strong>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="modal-body pt-2">
                <div class="tab-content">

                    <!-- HISTORIAL -->
                    <div class="tab-pane fade show active" id="tab-historial" role="tabpanel" aria-labelledby="tab-historial-tab">
                        <div class="cc-section">
                            <div class="cc-toolbar">
                                <div class="d-flex align-items-center gap-2">
                                    <span class="cc-mini-stat success">
                                        <i class="fa fa-arrow-up"></i>
                                        <span>Ingresos:</span><strong id="sumIngresos">—</strong>
                                    </span>
                                    <span class="cc-mini-stat danger">
                                        <i class="fa fa-arrow-down"></i>
                                        <span>Egresos:</span><strong id="sumEgresos">—</strong>
                                    </span>
                                    <span class="cc-mini-stat">
                                        <i class="fa fa-scale-balanced"></i>
                                        <span>Saldo:</span><strong id="sumSaldo">—</strong>
                                    </span>
                                </div>
                            </div>

                            <div class="table-responsive cc-table-wrap">
                                <table class="table table-hover table-striped align-middle mb-0 cc-table" id="tblHistorialSaldos">
                                    <thead>
                                        <tr>
                                            <th class="text-center" style="width:160px;">Fecha</th>
                                            <th class="text-end" style="width:160px;">Ingreso</th>
                                            <th class="text-end" style="width:160px;">Egreso</th>
                                            <th>Observaciones</th>
                                            <th class="text-center" style="width:160px;">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                            <div class="cc-footbar">
                                <div class="cc-chip soft">
                                    <i class="fa fa-info-circle"></i>
                                    Los montos editados/quitados ajustan automáticamente el <strong>Saldo a favor</strong> del cliente.
                                </div>
                                <button class="btn btn-ghost" data-bs-dismiss="modal">
                                    <i class="fa fa-times"></i> Cerrar
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- NUEVO -->
                    <div class="tab-pane fade" id="tab-nuevo" role="tabpanel" aria-labelledby="tab-nuevo-tab">
                        <div class="cc-section">
                            <div class="row g-3">
                                <input type="hidden" id="saldoIdCliente">

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Tipo</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-exchange"></i></span>
                                        <select class="form-control" id="movTipo" required>
                                            <option value="Ingreso">Ingreso (+)</option>
                                            <option value="Egreso">Egreso (-)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Monto</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-dollar"></i></span>
                                        <input type="number" step="0.01" min="0.01" class="form-control text-end" id="movMonto" placeholder="0,00" required>
                                    </div>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Fecha</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        <input type="datetime-local" class="form-control" id="movFecha">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Observaciones</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-commenting-o"></i></span>
                                        <input type="text" class="form-control" id="movObs" maxlength="200" placeholder="Detalle opcional">
                                    </div>
                                </div>
                            </div>

                            <div class="cc-actions end mt-3">
                                <button class="btn btn-ghost" data-bs-dismiss="modal">
                                    <i class="fa fa-times"></i> Cancelar
                                </button>
                                <button class="btn btn-primary" id="btnCrearMovimiento">
                                    <i class="fa fa-check"></i> Crear movimiento
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- EDITAR -->
                    <div class="tab-pane fade" id="tab-editar" role="tabpanel" aria-labelledby="tab-editar-tab">
                        <div class="cc-section">
                            <div class="row g-3">
                                <input type="hidden" id="movEditId">

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Tipo</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-exchange"></i></span>
                                        <select class="form-control" id="movEditTipo" required>
                                            <option value="Ingreso">Ingreso (+)</option>
                                            <option value="Egreso">Egreso (-)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Monto</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-dollar"></i></span>
                                        <input type="number" step="0.01" min="0.01" class="form-control text-end" id="movEditMonto" required>
                                    </div>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label class="form-label">Fecha</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        <input type="datetime-local" class="form-control" id="movEditFecha">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Observaciones</label>
                                    <div class="input-group cc-input">
                                        <span class="input-group-text"><i class="fa fa-commenting-o"></i></span>
                                        <input type="text" class="form-control" id="movEditObs" maxlength="200">
                                    </div>
                                </div>
                            </div>

                            <div class="cc-actions between mt-3">
                                <button class="btn btn-ghost" id="btnCancelarEdicion">
                                    <i class="fa fa-chevron-left"></i> Volver al historial
                                </button>
                                <button class="btn btn-success" id="btnGuardarEdicion">
                                    <i class="fa fa-save"></i> Guardar cambios
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer modal-footer-cc justify-content-between">
                <div class="cc-chip soft">
                    <i class="fa fa-shield"></i> Operaciones de clientes con transacciones
                </div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

