@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var ambienteTest = Configuration.GetValue<int>("AmbienteTest");
    ViewData["Title"] = "Home Page";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons + Select2 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

    <!-- Tus estilos -->
    <link href="~/css/site.css?v=1.0" rel="stylesheet" />
    <link href="~/css/Zonas.css?v=1.1" rel="stylesheet" />
    <link href="~/css/productos.css?v=1.0" rel="stylesheet" />
    <!-- Si tenés el mismo CSS de rediseño que usás en Productos, incluilo también -->
    <link rel="stylesheet" href="~/css/redisenopantallas.css?v=1.0" />
}

<partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

<div class="container page-99" style="margin-top:100px">
    <!-- Header KPI estilo “glass” (idéntico patrón a Productos) -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-map-o"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Zonas</h2>
                    <small class="text-muted-cc">Listado y acciones</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap align-items-center">
                <!-- KPI: cantidad de zonas filtradas -->
                <div class="cc-stat">
                    <div class="label">Zonas</div>
                    <div class="value" id="kpiCantZonas">0</div>
                </div>

                <!-- Toggle filtros (persistente) -->
                <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltros">
                    <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                </button>

                <!-- Config Columnas -->
                <div class="dropdown cc-dd">
                    <button class="btn btn-secondary dropdown-toggle d-flex align-items-center"
                            type="button" id="dropdownColumnas" data-bs-toggle="dropdown"
                            data-bs-display="static" data-bs-auto-close="outside" aria-expanded="false">
                        <i class="fa fa-cog me-2"></i> Config. Columnas
                    </button>
                    <ul class="dropdown-menu cc-dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                </div>

                <!-- Nuevo -->
                <a class="btn btn-success d-flex align-items-center px-3 py-2 btnnuevo" onclick="nuevaZona()">
                    <i class="fa fa-plus-square me-2"></i> Nuevo
                </a>
            </div>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Barra de filtros plegable (mismos IDs que ya usás) -->
                    <form id="formFiltrosZonas" class="filter-bar shadow-sm rounded-3 mb-3 p-3 d-none">
                        <div class="row g-2 align-items-end">
                            <div class="col-12 col-md-3">
                                <label class="form-label">Cliente</label>
                                <select id="clientesfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>-</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-3">
                                <label class="form-label">Zona</label>
                                <select id="zonasfiltro" name="select" class="form-select input-nuevo">
                                    <option value="" selected>-</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-3 d-flex gap-2 mt-2">
                                <a class="btn btn-primary flex-fill" id="aplicarFiltros" onclick="aplicarFiltros()">
                                    <i class="fa fa-search me-1"></i> Aplicar
                                </a>
                                <button type="button" class="btn btn-outline-secondary" onclick="resetFiltrosZonas()">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Select all -->
                    <div class="dt-dark-wrap">
                        <div class="selectall-bar d-flex align-items-center gap-2 mb-2">
                            <label class="form-check-label d-flex align-items-center gap-2 m-0" for="selectAllCheckbox">
                                <span class="sa-toggle">
                                    <input class="form-check-input sa-input" type="checkbox" id="selectAllCheckbox" aria-label="Seleccionar todos">
                                    <span class="sa-slider"></span>
                                </span>
                                <span class="sa-text">Seleccionar todos</span>
                            </label>
                        </div>

                        <!-- Tabla -->
                        <table class="dt-dark display nowrap" id="grd_Zonas" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Cliente</th>
                                    <th>Precio</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- FAB BAR horizontal (como productos: acciones masivas) -->
                    <div class="fab-bar">
                        <a id="btnAumentarPrecios" class="btn btn-fab btn-fab-success" onclick="abrirmodalAumentarPrecios()" hidden>
                            <i class="fa fa-arrow-up"></i>
                            <span>Aumentar precios</span>
                        </a>
                        <a id="btnBajarPrecios" class="btn btn-fab btn-fab-gray" onclick="abrirmodalBajarPrecios()" hidden>
                            <i class="fa fa-arrow-down"></i>
                            <span>Bajar precios</span>
                        </a>
                        <a id="btnAsignarCliente" class="btn btn-fab btn-fab-green" onclick="abrirmodalClientes()" hidden>
                            <i class="fa fa-user"></i>
                            <span>Asignar cliente</span>
                        </a>
                    </div>

                </div><!-- /tabla-wrap -->
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- ====== MODALES (sin tocar IDs/estructura) ====== -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Zona</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarZona" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>
                    <div class="col-md-6">
                        <label id="lblNombre" for="txtNombre" class="form-label">Nombre (*)</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                    </div>
                    <div class="col-md-6">
                        <label id="lblPrecio" for="txtPrecio" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="txtPrecio">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-primary" onclick="guardarCambios()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal gestión de precios -->
<div class="modal fade" id="modalPrecios" tabindex="-1" aria-labelledby="modalPreciosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalPreciosLabel">Gestión de Precios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tablaPrecios" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Zona</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarPrecio()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Asignar cliente -->
<div class="modal fade" id="modalClientes" tabindex="-1" aria-labelledby="modalClientesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalClientesLabel">Asignar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formAsignarCliente" class="row g-3">
                    <div class="col-md-12">
                        <label for="Clientes" class="form-label">Cliente</label>
                        <select id="Clientes" name="select" class="form-control" required>
                            <option value="" selected>Seleccione Cliente</option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <p id="datos" class="text-center text-danger datos-error d-none mb-0"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button id="btnRegistrarModificar" type="button" class="btn btn-primary" onclick="asignarCliente()">Asignar</button>
            </div>
        </div>
    </div>
</div>

<!-- Aumentar -->
<div class="modal fade" id="modalAumentar" tabindex="-1" role="dialog" aria-labelledby="modalAumentarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalAumentarLabel">Aumentar Precios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formAumentar" class="row g-3">
                    <div class="col-md-12">
                        <label id="lblAumentoPrecio" for="txtAumentoPrecio" class="form-label">Porc. Precio</label>
                        <input type="text" class="form-control" id="txtAumentoPrecio" value="0" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>
                    <p id="datosAumento" class="mb-3 text-center text-danger datos-error d-none"></p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Cerrar
                </button>
                <button id="btnAumentar" type="button" class="btn btn-primary" onclick="aumentarPrecios()">
                    <i class="fa fa-check"></i> Aumentar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bajar -->
<div class="modal fade" id="modalBajar" tabindex="-1" role="dialog" aria-labelledby="modalBajarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content ">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalBajarLabel">Bajar Precios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body ">
                <form id="formBajar" class="row g-3">
                    <div class="col-md-12">
                        <label id="lblBajaPrecio" for="txtBajaPrecio" class="form-label">Porc. Precio</label>
                        <input type="text" class="form-control" id="txtBajaPrecio" value="0" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>
                    <p id="datosBaja" class="mb-3 text-center text-danger datos-error d-none"></p>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Cerrar
                </button>
                <button id="btnBajar" type="button" class="btn btn-primary" onclick="bajarPrecios()">
                    <i class="fa fa-check"></i> Bajar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

