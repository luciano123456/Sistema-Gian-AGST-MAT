@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Gastos";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Select2 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

    <!-- Estilo base (igual Pedidos / Zonas) -->
    <link rel="stylesheet" href="~/css/redisenopantallas.css?v=1.0" />
    <link rel="stylesheet" href="~/css/pedidos.css?v=1.0" />
}

<partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

<div class="container page-99" style="margin-top:100px">

    <!-- ================= HEADER + KPIs ================= -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-money"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Gastos</h2>
                    <small class="text-muted-cc">Registro y análisis</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap align-items-center">
                <div class="cc-stat">
                    <div class="label">Total ARS</div>
                    <div class="value"><strong id="kpiTotalArs">$ 0,00</strong></div>
                </div>
                <div class="cc-stat">
                    <div class="label">Cantidad</div>
                    <div class="value"><strong id="kpiCantidad">0</strong></div>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABLA ================= -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap">

                    <!-- ===== CONTROLES SUPERIORES (IGUAL PEDIDOS) ===== -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">
                        <button class="btn btn-success btnnuevo" onclick="nuevoGasto()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo
                        </button>

                        <button class="btn btn-outline-primary" type="button" id="btnToggleFiltros">
                            <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                        </button>

                        <div class="dropdown cc-dd">
                            <button class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu cc-dropdown-menu" id="configColumnasMenu"></ul>
                        </div>
                    </div>

                    <!-- ================= FILTROS ================= -->
                    <form id="formFiltrosGastos" class="filter-bar rounded-3 p-3 mb-3 d-none">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-2">
                                <label class="form-label">Desde</label>
                                <input type="date" id="txtFechaDesde" class="form-control">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Hasta</label>
                                <input type="date" id="txtFechaHasta" class="form-control">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Moneda</label>
                                <select id="filtroMoneda" class="form-select"></select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Tipo de gasto</label>
                                <select id="filtroTipo" class="form-select"></select>
                            </div>
                            <div class="col-md-2 d-flex gap-2">
                                <button type="button" class="btn btn-primary flex-fill" onclick="aplicarFiltros()">
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltros()">
                                    <i class="fa fa-eraser"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- ================= TABLA ================= -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap" id="grd_gastos" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Moneda</th>
                                    <th>Importe</th>
                                    <th>Cotización</th>
                                    <th>Importe ARS</th>
                                    <th>Concepto</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- ================= RESUMEN / DASHBOARD ================= -->
    <div class="accordion mt-4" id="accordionResumen">
        <div class="accordion-item card-glass">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-transparent text-white fw-800"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapseResumen">
                    <i class="fa fa-bar-chart me-2"></i> Resumen de Gastos
                </button>
            </h2>
            <div id="collapseResumen" class="accordion-collapse collapse">
                <div class="accordion-body">

                    <div id="dashboardResumen" class="row g-3">
                        <!-- Cards dinámicas por moneda / tipo -->
                    </div>

                    <div class="row g-4 mt-4" id="wrapAnaliticaMensual">

                        <!-- EVOLUCIÓN MENSUAL -->
                        <div class="col-lg-8">
                            <div class="card-glass p-4 h-100">
                                <h5 class="fw-800 mb-3">
                                    <i class="fa fa-line-chart me-2"></i>
                                    Evolución mensual de gastos
                                </h5>
                                <canvas id="chartGastosMes"></canvas>
                            </div>
                        </div>

                        <!-- MESES DESTACADOS -->
                        <div class="col-lg-4">
                            <div class="card-glass p-4 h-100 d-flex flex-column gap-3">

                                <div class="cc-stat">
                                    <div class="label">Mes con mayor gasto</div>
                                    <div class="value" id="mesMayorGasto">—</div>
                                    <small id="mesMayorMonto"></small>
                                </div>

                                <div class="cc-stat">
                                    <div class="label">Mes con menor gasto</div>
                                    <div class="value" id="mesMenorGasto">—</div>
                                    <small id="mesMenorMonto"></small>
                                </div>

                            </div>
                        </div>

                    </div>

                    <!-- TIPOS DE GASTO -->
                    <div class="row g-4 mt-4">

                        <div class="col-lg-6">
                            <div class="card-glass p-4">
                                <h5 class="fw-800 mb-3">
                                    <i class="fa fa-pie-chart me-2"></i>
                                    Distribución por tipo de gasto
                                </h5>
                                <canvas id="chartTiposGasto"></canvas>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card-glass p-4">
                                <h5 class="fw-800 mb-3">
                                    <i class="fa fa-sort-amount-desc me-2"></i>
                                    Ranking de tipos
                                </h5>
                                <div id="rankingTiposGasto"></div>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>

</div>

<!-- ================= MODAL ABM GASTOS ================= -->
<div class="modal fade" id="modalGasto" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-800" id="tituloModalGasto">Registrar gasto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="idGasto">

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Fecha</label>
                        <input type="date" id="gastoFecha" class="form-control">
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Tipo</label>
                        <select id="gastoTipo" class="form-select"></select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Moneda</label>
                        <select id="gastoMoneda" class="form-select"></select>
                    </div>

            
                    <div class="col-md-4">
                        <label class="form-label">Importe</label>
                        <input type="text" id="gastoImporte" class="form-control">
                    </div>

                            <div class="col-md-4 d-none" id="wrapCotizacion">
                        <label class="form-label">Cotización</label>
                        <input type="text" id="gastoCotizacion" class="form-control">
                    </div>


                    <div class="col-md-4" id="wrapImporteArs">
                        <label class="form-label">Importe ARS</label>
                        <input type="text" id="gastoImporteArs" class="form-control" readonly>
                    </div>


                    <div class="col-12">
                        <label class="form-label">Concepto</label>
                        <input type="text" id="gastoConcepto" class="form-control">
                    </div>
                </div>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-success fw-800" id="btnGuardarGasto" onclick="guardarCambiosGasto()">
                    Registrar
                </button>
            </div>

        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <!-- ✅ GRÁFICOS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- ✅ PDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <!-- (opcional para meter charts al PDF como imagen) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script src="~/js/site.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment-with-locales.min.js"></script>


    <!-- JS DEL MÓDULO -->
    <script src="~/js/gastos.js?v=1.0"></script>
}

